.lds-ripple
  display inline-block
  position absolute
  left 50%
  top 50%
  transform translate(-50%, -50%)
  width 80px
  height 80px

.lds-ripple div
  position absolute
  border 4px solid #000
  opacity 1
  border-radius 50%
  animation lds-ripple 1s cubic-bezier(0, 0.2, 0.8, 1) infinite

.lds-ripple div:nth-child(2)
  animation-delay -0.5s

@keyframes lds-ripple {
  0% {
    top: 40px
    left: 40px
    width: 0
    height: 0
    opacity: 1
  }
  100% {
    top: 0
    left: 0
    width: 80px
    height: 80px
    opacity: 0
  }
}
