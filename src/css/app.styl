@import './init-load'
@import './glass'
@import './google-map'

// >> quasar app global css
body.body--dark
  background-color $dark-page

.q-drawer__backdrop
  background-color $transparent !important

.q-btn
  color $primary

body.body--dark
  .q-btn
    color $white

.q-field
  input
    color inherit

.q-menu
  background-color transparent
  box-shadow unset

