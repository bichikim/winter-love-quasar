{
  "compileOnSave": false,
  "compilerOptions": {

    // build environment
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "jsx": "preserve",
    "lib": ["es2015", "esnext", "dom", "es2016", "es2017"],
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "dist",
    "paths": {
      "@/*": ["src/*"],
      "~/*": ["src/*"],
      "@@/*": ["*"],
      "~~/*": ["*"]
    },
    "removeComments": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "esnext",
    "typeRoots": [
      "node_modules/@types",
      "types"
    ],
    // decorators
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    //lint
    "alwaysStrict": true,
    "noEmitHelpers": false,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "strict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": false,
    "suppressImplicitAnyIndexErrors": true
  },
  "include": [
    "packages/**/*.ts",
    "packages/**/*.tsx",
    "packages/**/*.vue",
    "types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
